
<h1>Welcome to TicTacToe!</h1>

<%= render  :partial => "ttt_header",
      :locals => {  :current_player => @current_player,
                :game_over => @game_over } %>


<%= render  :partial => "ttt_board", 
            :locals => { :board_arr => @board_arr } %>

<% if @game_over %>

  
  <%= link_to "Play Again!", new_path %>

<% else %>

  <%= render  :partial => "ttt_form", 
              :locals => { :board_arr => @board_arr } %>

<% end %>

